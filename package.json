{
  "name": "cookie-vue-ui",
  "version": "0.0.0",
  "description": "Vue3 PC端组件库",
  "keywords": [
    "vue",
    "vue3",
    "vue component",
    "vue3 component"
  ],
  "author": "idonteatcookie",
  "main": "dist/cookieui.umd.js",
  "module": "dist/cookieui.es.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build --config vite.config.ts && npm run build:disperse && npm run build:types && npm run build:style",
    "build:disperse": "vite build --config vite.config.build.disperse.ts",
    "build:types": "esno vue-dts-gen.ts",
    "build:style": "vite build --config vite.config.build.css.ts",
    "serve": "vite preview",
    "format": "prettier . --write",
    "lint": "eslint --ext .js,.vue,.ts,.tsx,.jsx --ignore-path .gitignore --fix src",
    "prepare": "husky install",
    "test": "jest"
  },
  "dependencies": {
    "vue": "^3.2.16"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.4",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "@vitejs/plugin-vue": "^1.9.3",
    "@vitejs/plugin-vue-jsx": "^1.2.0",
    "@vue/test-utils": "^2.0.0-rc.16",
    "@vue/vue3-jest": "^27.0.0-alpha.3",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^7.20.0",
    "esno": "^0.11.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "lint-staged": "^11.2.4",
    "prettier": "^2.4.1",
    "sass": "^1.43.4",
    "ts-jest": "^27.0.7",
    "ts-morph": "^12.2.0",
    "typescript": "^4.4.3",
    "vite": "^2.6.4",
    "vue-tsc": "^0.3.0"
  },
  "lint-staged": {
    "*.md": "prettier --write",
    "*.{ts,tsx,js,vue}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
